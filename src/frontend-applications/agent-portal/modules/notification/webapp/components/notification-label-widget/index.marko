<if(state.prepared)>
    <widget
        instanceId=state.instanceId
        title=(state.widgetConfiguration ? state.widgetConfiguration.title : "")
        contentActions=state.actions
    >
        <@content>
            <if(state.notification)>
                <div.notification-recipients>
                    <for|property| of=state.properties>
                        <if(component.isLabelList(property))>
                            <object-property-label
                                object=state.notification
                                property=property
                                labelProvider=state.labelProvider
                                noValueTitle
                            >
                                <@value>
                                    <label-list
                                        labels=component.getLabelList(property)
                                        removeLabels=false
                                    />
                                </@value>
                            </object-property-label>
                        </if>
                        <else>
                            <object-property-label
                                object=state.notification
                                property=property
                                labelProvider=state.labelProvider
                            />
                        </else>
                    </for>
                </div>
            </if>
        </@content>
    </widget>
</if>
