<div.link-input>
    <if(!state.loading)>
        <if(state.allowCreate)>
            <button.kix-button.form-button
                type="button"
                title=state.translations["Assign Links"]
                on-click("openDialog")>
                <span.kix-icon-new-link/>
                <translation-string pattern="Translatable#Assign Links"/>
            </button>
        </if>
        <span.link-notice
            on-click("minimize")
            class={
                "has-text": !!state.linkDescriptions.length
            }>
            <if(!!state.linkDescriptions.length)>
                <span>
                    <translation-string
                        pattern="Translatable#{0} Link created"
                        placeholders=[state.linkDescriptions.length]/>
                    <span.kix-icon-check/>
                </span>
            </if>
            <div.toggle>
                <span.line class={
                    minimized: state.minimized
                }/>
                <if(state.minimized)>
                    <span.kix-icon-sort-down/>
                </if>
                <else>
                    <span.kix-icon-triangle-up>
                        <span.path1/>
                        <span.path2/>
                    </span>
                </else>
            </div>
        </span>
        <if(!state.minimized)>
            <label-list labels=state.labels on-removeLabel("removeLink")/>
        </if>
    </if>
</div>
