<div
    id="info-toast"
    class="toast position-absolute top-0 start-50 p-1 bg-light fade me-5 mt-5 border-1 border-primary"
    role="alert"
    data-bs-autohide="true"
    data-bs-animation="true"
    data-bs-delay=2500
>
    <div class="toast-header bg-primary text-white">
        <i class="fa-solid fa-info me-2"/>
        <strong class="me-auto">
            <translation-string pattern="Translatable#Information"/>
        </strong>
        <small>${state.time}</small>
        <button
            type="button"
            class="btn-close"
            data-bs-dismiss="toast"
            aria-label="Close"
        />
    </div>
    <div class="toast-body">
        <translation-string pattern=state.message/>
    </div>
</div>
