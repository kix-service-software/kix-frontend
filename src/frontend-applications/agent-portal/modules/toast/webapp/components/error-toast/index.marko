<div
    id="error-toast"
    class="toast position-absolute top-0 start-50 p-1 bg-light fade me-5 mt-5 border-1 border-danger pe-auto"
    role="alert"
    data-bs-autohide=false
    data-bs-animation="true">
    <div class="toast-header bg-danger text-white">
        <i class="fa-solid fa-triangle-exclamation me-2"/>
        <strong class="me-auto">
            <translation-string pattern="Translatable#Error"/>
        </strong>
        <small>${state.time}</small>
        <button
            type="button"
            class="btn-close"
            data-bs-dismiss="toast"
            aria-label="Close"/>
    </div>
    <div class="toast-body">
        <translation-string pattern=state.message/>
    </div>
</div>
