<widget
    contextInstanceId=input.contextInstanceId
    instanceId=state.instanceId
    title=state.title
    icon="kix-icon-gears"
    minimizable=false>
    <@content>
        <if(state.prepared)>
            <div class="sysconfig-container">
                <div class="sysconfig-search">
                    <input
                        type="text"
                        on-keyup("keyUp")
                        value=state.filterValue
                        placeholder=state.placeholder
                        class="input-style">
                    <button
                        type="button"
                        title=(state.translations["Translatable#Help"])
                        on-click("showCommandHelp", false)
                        class="kix-button button button-without-text">
                        <overlay-icon
                            isHint
                            content="Translatable#Helptext_Admin_SysConfigSearch"
                            title=(
                                state.translations["Translatable#SysConfig"]
                            )/>
                    </button>
                    <button
                        type="button"
                        on-click("search")
                        class="kix-button submit-button">
                        <span class="kix-icon-search"/>
                        <translation-string pattern="Translatable#Search"/>
                    </button>
                </div>
                <kix-table table=state.table/>
            </div>
        </if>
    </@content>
</widget>
