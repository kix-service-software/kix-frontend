<if(!state.loading)>
    <widget
        contextInstanceId=input.contextInstanceId
        instanceId="edit-sysconfig-dialog">
        <@content>
            <main-form/>
            <div class="dialog-control">
                <div class="dialog-button-container">
                    <button
                        type="button"
                        on-click("cancel")
                        title=(state.translations["Translatable#Cancel"])
                        class="kix-button cancel-button">
                        <span class="kix-icon-close"/>
                        <translation-string pattern="Translatable#Cancel"/>
                    </button>
                    <if(state.reset)>
                        <button
                            type="button"
                            on-click("reset")
                            title=(
                                state.translations[
                                    "Translatable#Reset to Default"
                                ]
                            )
                            class="kix-button form-blank-cancel-button">
                            <span class="kix-icon-arrow-rotate-left"/>
                            <translation-string pattern="Translatable#Reset to Default"/>
                        </button>
                    </if>
                    <button
                        type="button"
                        on-click("submit")
                        title=(state.translations["Translatable#Save"])
                        class="kix-button submit-button">
                        <span class="kix-icon-check"/>
                        <translation-string pattern="Translatable#Save"/>
                    </button>
                </div>
            </div>
        </@content>
    </widget>
</if>
