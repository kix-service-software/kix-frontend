<widget
    contextInstanceId=input.contextInstanceId
    instanceId=input.instanceId
    title="Translatable#Legend"
    icon="kix-icon-legend">
    <@content>
        <if(state.show)>
            <div class="legend">
                <div class="legend-item yellow"/>
                <span>
                    <translation-string pattern="Translatable#Changed"/>
                </span>
                <div class="legend-item red"/>
                <span>
                    <translation-string pattern="Translatable#Deleted"/>
                </span>
                <div class="legend-item green"/>
                <span>
                    <translation-string pattern="Translatable#New"/>
                </span>
                <div class="legend-item gray"/>
                <span>
                    <translation-string pattern="Translatable#Not available (not any more or not yet)"/>
                </span>
            </div>
        </if>
    </@content>
</widget>
