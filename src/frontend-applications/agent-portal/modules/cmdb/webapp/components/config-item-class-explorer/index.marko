<div class="ci-category-explorer">
    <widget
        instanceId=state.instanceId
        title=(
            state.widgetConfiguration
                ? state.widgetConfiguration.title
                : "Translatable#CI Classes"
        )
    >
        <@content>
            <filter
                on-filter("filter")
                key="ci-class-explorer-filter"
                showFilterCount=false
            />
            <if(state.loading)>
                <loading-spinner/>
            </if>
            <div
                class=[
                    "show-all",
                    {
                        active: !state.activeNode,
                    },
                ]
                on-click("showAll")
            >
                <translation-string pattern="Translatable#Overview"/>
            </div>
            <if(state.nodes)>
                <tree
                    treeId="cmdb-item-class-tree"
                    tree=state.nodes
                    activeNode=state.activeNode
                    filterValue=state.filterValue
                    on-nodeClicked("activeNodeChanged")
                />
            </if>
        </@content>
    </widget>
</div>
