<div class="cmdb-dashboard">
    <div class="ci-search">
        <input
            type="text"
            on-keyup("keyUp")
            value=state.filterValue
            placeholder=state.placeholder
            class="input-style"
        >
        <button
            type="button"
            title=(state.translations["Translatable#Help"])
            on-click("showCommandHelp", false)
            class="kix-button button button-without-text"
        >
            <overlay-icon
                isHint
                content="Translatable#Helptext_CMDB_Dashboard_Search"
                title=(state.translations["Translatable#Search"])
            />
        </button>
        <button
            type="button"
            on-click("search")
            class="kix-button submit-button"
        >
            <span class="kix-icon-search"/>
            <translation-string pattern="Translatable#Search"/>
        </button>
    </div>
    <if(state.prepared)>
        <widget-container
            widgets=state.contentWidgets
            contextWidgetList="content"
        />
    </if>
</div>
