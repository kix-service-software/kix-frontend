<widget
    contextInstanceId=input.contextInstanceId
    instanceId=state.instanceId
    title=state.widgetTitle
    contentActions=state.actions>
    <@content>
        <if(state.loading)>
            <loading-spinner/>
        </if>
        <else>
            <div class="config-item-images-container">
                <for|image| of=state.thumbnails>
                    <div class="image-container">
                        <div class="image">
                            <img alt=image.title src=image.content>
                            <div class="image-title">
                                ${image.title}
                            </div>
                        </div>
                        <div
                            on-click("openImageDialog", image.imageId)
                            title=(
                                state.translations["Translatable#Large View"]
                            )
                            class="hover-shield">
                            <div class="hover-info">
                                <span class="hover-icon kix-icon-arrow-fullscreen"/>
                                <span class="hover-hint no-select">
                                    Gro√üansicht
                                </span>
                            </div>
                        </div>
                    </div>
                </for>
            </div>
        </else>
    </@content>
</widget>
