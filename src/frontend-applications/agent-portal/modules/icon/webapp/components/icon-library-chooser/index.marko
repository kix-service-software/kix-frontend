<input
   class="form-control form-control-sm"
   type="text"
   placeholder="search for icon"
   value=state.iconFilterValue
   on-keydown("filterIcons")
>
<div class="d-flex my-2">
   <div class="form-check form-switch mx-2" on-click("toggleKIXFont")>
      <input
         class="form-check-input"
         type="checkbox"
         id="kixFont"
         checked=state.kixFont
      >
      <label class="form-check-label" for="kixFont">
         KIX Font
      </label>
   </div>
   <div class="form-check form-switch mx-2" on-click("toggleFontAwesome")>
      <input
         class="form-check-input"
         type="checkbox"
         id="fontAwesome"
         checked=state.fontAwesome
      >
      <label class="form-check-label" for="fontAwesome">
         Font Awesome
      </label>
   </div>
   <div class="form-check form-switch mx-2" on-click("toggleKIXIcons")>
      <input
         class="form-check-input"
         type="checkbox"
         id="kixIcons"
         checked=state.kixIcons
      >
      <label class="form-check-label" for="kixIcons">
         KIX Icons
      </label>
   </div>
</div>
<div class="d-flex flex-wrap icon-list mt-2">
   <for|icon| of=state.filteredIcons>
      <div class="mx-3 my-2 fs-1" on-click("iconClicked", icon)>
         <icon icon=icon/>
      </div>
   </for>
</div>
