<div
   class=[
      "icon-upload",
      {
         dragging: state.dragging,
      },
   ]
   on-drop("drop")
>
   <button
      type="button"
      on-click("triggerFileUpload")
      title=(state.translations["Translatable#Select image file"])
      class="kix-button form-button icon-upload-button"
   >
      <span class="kix-icon-upload"/>
      <translation-string pattern="Translatable#Select image file"/>
      <input
         type="file"
         key="iconUploadInput"
         on-change("setIcon")
         class="icon-upload-input"
      >
   </button>
   <span class="icon-preview">
      <if(state.icon)>
         <icon icon=state.icon/>
      </if>
   </span>
</div>
