<if(state.show)>
    <if(component.showShield())>
        <div class="shield overlay-shield"/>
    </if>
    <div key=state.overlayId class="overlay">
        <div
            class=["overlay-content", state.overlayClass]
            on-click("overlayClicked")
            on-mousedown("overlayClicked")
            key="overlay">
            <widget
                contextInstanceId=input.contextInstanceId
                instanceId=state.overlayInstanceId
                title=state.title
                minimizable=false
                closable=component.hasClosable()
                on-closeWidget("closeOverlay")
                on-headerMousedown("startMove")
                icon=state.icon>
                <@content>
                    <if(component.isComponentContent())>
                        <div>
                            <${component.getTemplate()}
                                ...state.content.getComponentData()
                                on-closeOverlay("closeOverlay")/>
                        </div>
                    </if>
                    <else>
                        <div>
                            <if(component.isHint())>
                                <textarea
                                    key="hint-overlay"
                                    id="hint-overlay"
                                    rows=2
                                    readonly
                                    disabled>${state.value}</textarea>
                            </if>
                            <else>${state.value}</else>
                        </div>
                    </else>
                    <if(state.hasCloseButton)>
                        <button
                            key="close-button"
                            type="button"
                            on-click("closeOverlay")
                            title=(state.translations["Close Overlay"])
                            class="kix-button message-button">
                            <span class="kix-icon-check"/>
                            <translation-string pattern="Translatable#Close Overlay"/>
                        </button>
                    </if>
                    <if(component.canResize())>
                        <div on-mousedown("startResize") class="overlay-resize">
                            <div/>
                            <div/>
                        </div>
                    </if>
                </@content>
            </widget>
        </div>
    </div>
</if>
