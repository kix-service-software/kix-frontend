<if(state.displayText)>
    <div.user-avatar-label>
        <div.user-avatar-icon>
            <icon icon=state.icon/>
        </div>
        <div.user-avatar-description style=input.descriptionStyle title=state.description>${state.description}</div>
        <div.user-avatar-text style=input.textStyle title=state.displayText dir=(state.rtl ? 'rtl' : 'ltr')>${state.displayText}</div>
    </div>
</if>
