<if(state.displayText)>
    <div class="user-avatar-label">
        <div class="user-avatar-icon">
            <icon icon=state.icon/>
        </div>
        <div
            style=input.descriptionStyle
            title=state.description
            class="user-avatar-description"
        >
            <span class="user-avatar-description-text">
                ${state.description}
            </span>
            <if(state.overlay)>
                <overlay-icon
                    title=(state.overlay.Title)
                    icon=(state.overlay.Icon)
                    content=(state.overlay.Content)
                    isHint=(state.overlay.IsHint)
                    isCustom=(state.overlay.IsCustom)
                    data={
                        object: state.overlay.Data,
                        properties: state.overlay.Data.Properties,
                    }
                />
            </if>
        </div>
        <div
            style=input.textStyle
            title=state.displayText
            class="user-avatar-text"
            dir=(state.rtl ? "rtl" : "ltr")
        >
            ${state.displayText}
        </div>
    </div>
</if>
