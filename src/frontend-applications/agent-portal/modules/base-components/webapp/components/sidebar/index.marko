<for|context| of=state.contextList>
    <div
        key="sidebar-" + context.instanceId + (input.isLeft ? "-left" : "")
        id="sidebar-" + context.instanceId + (input.isLeft ? "-left" : "")
        data-contextinstanceid=context.instanceId
        class=[
            "sidebar",
            `sidebar-${input.isLeft ? "left" : 'right'}`,
            {
                "d-none": !component.isActiveContext(context.instanceId),
                "sidebars-shown": state.showSidebarArea || state.isMobile,
            },
        ]>
        <if(state.reloadSidebarId !== context.instanceId)>
            <${component.getSidebarTemplate()}
                isLeft=input.isLeft
                contextInstanceId=context.instanceId
                on-sidebarToggled('sidebarToggled')/>
        </if>
    </div>
</for>
