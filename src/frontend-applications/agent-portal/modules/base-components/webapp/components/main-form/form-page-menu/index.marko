<if(state.prepared && state.pages && state.pages.length > 1)>
    <if(input.before)>
        <div class=[
            "page-title-before",
            {
                "title-change": state.pageChanged,
            },
        ]>
            ${state.activePageTitle}
        </div>
    </if>
    <div class=(
        input.before ? "form-page-menu-before" : "form-page-menu-after"
    )>
        <div
            class=[
                "kix-icon-nook-left",
                {
                    "dead-end": !state.activePageIndex,
                },
            ]
            title=(
                state.activePageIndex
                    ? state.translations["Translatable#Previous"]
                    : ""
            )
            on-click("showPage", state.activePageIndex - 1)
        />
        <for|page, index| of=state.pages>
            <span
                class={
                    active: index === state.activePageIndex,
                }
                title=(state.translations[page.name])
                on-click("showPage", index)
            />
        </for>
        <div
            class=[
                "kix-icon-nook-right",
                {
                    "dead-end":
                        state.activePageIndex &&
                        state.pages.length - 1 === state.activePageIndex,
                },
            ]
            title=(
                !isNaN(state.activePageIndex) &&
                state.pages.length - 1 !== state.activePageIndex
                    ? state.translations["Translatable#Next"]
                    : ""
            )
            on-click("showPage", state.activePageIndex + 1)
        />
    </div>
    <if(!input.before)>
        <div class=[
            "page-title-after",
            {
                "title-change": state.pageChanged,
            },
        ]>
            ${state.activePageTitle}
        </div>
    </if>
</if>
