<div.article-body.input-style class={
    invalid: state.invalid
}>
    <if(state.field)>
        <editor
            resize=true
            value=state.currentValue
            on-valueChanged("valueChanged")
            required=state.field.required
            invalid=state.invalid
            noImages=state.noImages
            readOnly=state.field.readonly
            useReadonlyStyle=state.field.readonly
            key=(state.field.instanceId + "-editor")/>
    </if>
</div>
