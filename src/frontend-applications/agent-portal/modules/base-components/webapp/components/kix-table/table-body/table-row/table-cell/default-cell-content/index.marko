<div.table-cell-content
    class={
        "with-icons": component.showIcons,
        "with-text": component.showText
    }
    style={
        height: input.height
    }
    title=(state.cell.getValue() ? state.cell.getValue().displayValue : "")>
    <if(state.cell)>
        <if(component.showIcons && state.cell.getValue() && state.cell.getValue().displayIcons)>
            <span>
                <for|icon| of=state.cell.getValue().displayIcons>
                    <icon icon=icon showUnknown=true/>
                </for>
            </span>
        </if>
        <if(component.showText && state.cell.getValue())>
            <span.text.cell-display-text class={
                "show-object": state.cell.getValue().displayValue !== null
            }>${state.cell.getValue().displayValue}</span>
        </if>
    </if>
</div>
