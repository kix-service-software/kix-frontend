<div title=state.fileName + " (" + state.fileSize + ")" class="file-entry">
    <span class="file-entry-icon">
        <icon icon=state.icon showUnknown/>
    </span>
    <span on-click("onClick", false) class="file-entry-link">
        ${state.fileName}
    </span>
    <span class="file-size">
        <if(state.fileSize)>
            (${state.fileSize})
        </if>
    </span>
    <span on-click("onClick", true) class="file-download kix-icon-download"/>
</div>
