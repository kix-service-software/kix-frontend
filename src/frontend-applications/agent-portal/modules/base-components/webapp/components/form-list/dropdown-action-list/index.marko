<div.input-action-list>
    <for|action| of=input.actions>
        <label-item
            label=action.label
            toggle=action.active
            showToggle=action.showActive
            removeLabels=false
            translatable=true
            on-labelClicked("actionClicked", action)/>
    </for>
</div>
