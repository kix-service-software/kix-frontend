<if(
    state.freeText ||
    component.hasManyNodes() ||
    state.autocompleteConfiguration,
)>
    <input.input-style
        type="text"
        placeholder=state.placeholder
        value=state.filterValue
        key="form-list-input"
        on-keyup("keyup")
        on-keydown("keydown")
        on-focus("stopEvent")
        onblur("stopEvent")
        no-update
    >
    <if(state.loading)>
        <div.form-list-loading><loading-spinner/></div>
    </if>
    <if(
        state.autocompleteConfiguration &&
        (!state.tree || state.tree.length === 0),
    )>
        <div.form-list-autocomplete-no-results>
            <span>${state.autocompleteNotFoundText}</span>
        </div>
    </if>
</if>
<input.d-none type="text" key="hidden-filter-input" on-keydown("keydown")>
