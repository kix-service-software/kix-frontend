<if(!state.loading)>
    <if(state.url)>
        <if(!state.isExternalUrl)>
            <a href=state.url on-click("linkClicked")>
                <if(input.content)>
                    <${input.content}/>
                </if>
            </a>
        </if>
        <else>
            <a href=state.url target="_blank">
                <if(input.content)>
                    <${input.content}/>
                </if>
            </a>
        </else>
    </if>
    <else-if(input.content)>
        <div on-click("linkClicked")>
            <${input.content}/>
        </div>
    </else-if>
</if>
