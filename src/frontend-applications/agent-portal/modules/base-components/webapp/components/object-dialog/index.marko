<div class="object-dialog">
    <widget-container widgets=state.widgets/>
    <if(state.canSubmit)>
        <div class="dialog-control">
            <dialog-notifiactions/>
            <div class="dialog-button-container">
                <button
                    disabled=state.processing
                    type="button"
                    on-click("cancel")
                    title=(state.translations["Translatable#Cancel"])
                    class="kix-button cancel-button"
                >
                    <span class="kix-icon-close"/>
                    <span>${state.translations["Translatable#Cancel"]}</span>
                </button>
                <button
                    disabled=state.processing
                    type="button"
                    on-click("submit")
                    title=state.submitButtonText
                    class="kix-button submit-button"
                >
                    <span class="kix-icon-check"/>
                    <span>${state.submitButtonText}</span>
                </button>
            </div>
        </div>
    </if>
</div>
