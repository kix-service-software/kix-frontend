<if(state.show)>
    <div.loading-shield>
        <div.loading-info>
            <loading-spinner/>
            <span>
                <translation-string pattern=state.hint/>
            </span>
            <if(state.time && !state.cancel)>
                <timer time=state.time/>
            </if>            
            <if(state.cancelCallback)>
                <button.kix-button.default-button
                    type="button"
                    on-click("cancel")
                    title=(
                        state.cancelButtonText
                            ? state.cancelButtonText
                            : state.translations["Translatable#Cancel"]
                    )
                    disabled=state.cancel>
                    <span.kix-icon-close/>
                    ${state.cancelButtonText
                    ? state.cancelButtonText
                    : state.translations["Translatable#Cancel"]}
                </button>
            </if>
        </div>
    </div>
</if>
