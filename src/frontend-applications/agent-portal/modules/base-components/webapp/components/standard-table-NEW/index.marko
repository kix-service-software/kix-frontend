<div.table-container
    on-scroll("onScroll")
    style=("height:" + state.tableHeight)
    key=(state.table ? state.table.getTableId() + "table-container" : "no-table")>
    <if(state.table)>
        <table.standard-table-NEW>
            <thead>
                <table-head-row table=state.table/>
            </thead>
            <table-body table=state.table key=(state.table.getTableId() + "table-body")/>
        </table>
    </if>
</div>
