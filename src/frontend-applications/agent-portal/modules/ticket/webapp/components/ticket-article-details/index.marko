<if(state.loading)>
    <loading-spinner/>
</if>
<else-if(state.article)>
    <div.article-grid>
        <ticket-article-metadata article=state.article/>
        <div.article-content-container>
            <ticket-article-content article=state.article/>
        </div>
    </div>
</else-if>
<else>
    <span.error>
        <translation-string pattern="Translatable#No data available."/>
    </span>
</else>
