<div.ticket-print-container>
    <if(state.prepared)>
        <h1>${input.title}</h1>
        <div.ticket-print-information>
            <div>
                <for|property| of=state.leftProperties>
                    <div.property-label>
                        <div.label>${property[0]}</div>
                        <div.value>${property[1]}</div>
                    </div>
                </for>
            </div>
            <div>
                <for|property| of=state.rightProperties>
                    <div.property-label>
                        <div.label>${property[0]}</div>
                        <div.value>${property[1]}</div>
                    </div>
                </for>
            </div>
        </div>
        <if(Array.isArray(input.articles))>
            <div.ticket-print-articles>
                <for|article| of=input.articles>
                    <div.ticket-print-article>
                        <h2>${article.subject}</h2>
                        <div.article-information>
                            <for|property| of=article.properties>
                                <div.property-label>
                                    <div.label>${property[0]}</div>
                                    <div.value>${property[1]}</div>
                                </div>
                            </for>
                        </div>
                        <div.article-text>
                            <editor readOnly=true value=article.content inlineContent=article.inlineContent useReadonlyStyle=true maxReadyTries=50/>
                        </div>
                    </div>
                </for>
            </div>
        </if>
    </if>
</div>
