<widget instanceId=state.instanceId title=state.title>
    <@content>
        <div.import-container>
            <if(state.importManager)>
                <if(state.prepared)>
                    <main-form/>
                </if>
                <div.form.import-attributes-container>
                    <widget
                        instanceId="dynamic-form-field-group"
                        title=(
                            state.translations["Translatable#Replace Values"]
                        )
                        key="attributes"
                    >
                        <@content>
                            <div.import-attributes>
                                <dynamic-form-field-container manager=state.importManager invalid=state.invalid/>
                            </div>
                        </@content>
                    </widget>
                </div>
                <if(state.table)>
                    <div.object-table>
                        <div.object-table-head>
                            <span>${state.tableTitle}</span>
                        </div>
                        <kix-table table=state.table/>
                    </div>
                </if>
            </if>
        </div>
    </@content>
</widget>
<div.dialog-control>
    <div.dialog-button-container>
        <button.kix-button.cancel-button
            type="button"
            on-click("cancel")
            title=(state.translations["Translatable#Cancel"])
        >
            <span.kix-icon-close/>
            <translation-string pattern="Translatable#Cancel"/>
        </button>
        <button.kix-button.submit-button
            type="button"
            on-click("run")
            title=(state.translations["Translatable#Start Import"])
            disabled=!state.canRun
        >
            <span.kix-icon-import/>
            <translation-string pattern="Translatable#Start Import"/>
        </button>
    </div>
</div>
