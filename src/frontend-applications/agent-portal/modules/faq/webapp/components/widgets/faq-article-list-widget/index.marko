<widget
    instanceId=state.instanceId
    contextType="MAIN"
    title=state.title
    actions=state.actions
    icon=(
        state.widgetConfiguration && state.widgetConfiguration.icon
            ? state.widgetConfiguration.icon
            : ""
    )
>
    <@headerfilter>
        <filter
            filterCount=state.filterCount
            predefinedFilter=state.predefinedTableFilter
            predefinedFilterPlaceholder="Alle FAQ"
            on-filter("filter")
        />
    </@headerfilter>
    <@content>
        <div.faq-article-history-container>
            <if(state.table)>
                <kix-table table=state.table/>
            </if>
        </div>
    </@content>
</widget>
