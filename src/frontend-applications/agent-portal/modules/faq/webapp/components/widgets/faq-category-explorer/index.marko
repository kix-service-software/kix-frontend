<div class="faq-category-explorer">
    <widget
        contextInstanceId=input.contextInstanceId
        instanceId=state.instanceId
        title=(
            state.widgetConfiguration
                ? state.widgetConfiguration.title
                : "Translatable#FAQ Categories"
        )>
        <@content>
            <if(state.prepared)>
                <div
                    class=[
                        "show-all m-1",
                        {
                            active: !state.activeNode,
                        },
                    ]
                    on-click("showAll")>
                    <translation-string pattern="Translatable#Show all"/>
                </div>
                <if(state.nodes && state.nodes.length)>
                    <tree
                        treeId="faq-category-tree"
                        tree=state.nodes
                        activeNode=state.activeNode
                        on-nodeClicked("activeNodeChanged")/>
                </if>
            </if>
        </@content>
    </widget>
</div>
