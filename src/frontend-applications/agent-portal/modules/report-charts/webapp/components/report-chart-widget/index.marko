<if(state.prepared)>
    <widget instanceId=state.instanceId title=state.title>
        <@content>
            <div.chart-container>
                <if(state.errorMessage)>
                    <span.error>${state.errorMessage}</span>
                </if>
                <if(state.chartConfig)>
                    <chart config=state.chartConfig/>
                </if>
            </div>
        </@content>
    </widget>
</if>
<else>
    <chart-placeholder/>
</else>