<if(state.prepared)>
    <widget
        contextInstanceId=input.contextInstanceId
        instanceId=state.instanceId
        title=state.title>
        <@content>
            <div class="chart-container">
                <if(state.errorMessage)>
                    <span class="error">
                        ${state.errorMessage}
                    </span>
                </if>
                <if(state.chartConfig)>
                    <chart config=state.chartConfig/>
                </if>
            </div>
        </@content>
    </widget>
</if>
<else>
    <chart-placeholder/>
</else>
