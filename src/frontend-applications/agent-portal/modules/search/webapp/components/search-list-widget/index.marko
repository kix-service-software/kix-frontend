<widget title="Searches" instanceId=state.instanceId key=state.instanceId>
   <@content>

      <if(state.prepared)>
         <if(state.userSearches.length)>
            <h2 class="my-3">
               <translation-string pattern="Translatable#My Searches"/>
            </h2>
            <tree
               tree=state.userSearches
               activeNode=state.activeNode
               on-nodeClicked("searchClicked")
            />
         </if>

         <if(state.sharedSearches.length)>
            <h2 class="my-3">
               <translation-string pattern="Translatable#Shared Searches"/>
            </h2>
            <tree
               tree=state.sharedSearches
               activeNode=state.activeNode
               on-nodeClicked("searchClicked")
            />
         </if>
      </if>
      <else>
         <loading-spinner/>
      </else>
   </@content>
</widget>
