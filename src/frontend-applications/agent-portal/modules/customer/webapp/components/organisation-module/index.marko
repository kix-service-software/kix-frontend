<div.customer-dashboard>
    <div.organisation-search>
        <input.input-style
            type="text"
            on-keyup("keyUp")
            value=state.filterValue
            placeholder=state.placeholder/>
        <button.kix-button.button.button-without-text
            type="button"
            title=state.translations["Translatable#Help"]
            on-click("showCommandHelp", false)>
            <overlay-icon
                isHint=true
                content="Translatable#Helptext_Customer_Dashboard_Search"
                title=state.translations["Translatable#Search"]/>
        </button>
        <button.kix-button.submit-button type="button" on-click("search")>
            <span.kix-icon-search/>
            <translation-string pattern="Translatable#Search"/>
        </button>
    </div>
    <widget-container widgets=state.contentWidgets contextWidgetList="content"/>
</div>
