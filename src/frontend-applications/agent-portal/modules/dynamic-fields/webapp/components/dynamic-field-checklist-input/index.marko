<if(state.prepared && state.checklist)>
    <div.check-list-container>
        <div.checklist-progress-container on-click("minimize")>
            <dynamic-field-checklist-progress checklist=state.checklist/>
            <div.form-separator/>
            <if(state.minimized)>
                <span.minimize-icon.kix-icon-sort-down/>
            </if>
            <else>
                <span.minimize-icon.kix-icon-triangle-up>
                    <span.path1/>
                    <span.path2/>
                </span>
            </else>
        </div>
        <if(!state.minimized)>
            <for|item| of=state.checklist>
                <checklist-item item=item on-itemValueChanged("itemValueChanged")/>
            </for>
        </if>
    </div>
</if>
