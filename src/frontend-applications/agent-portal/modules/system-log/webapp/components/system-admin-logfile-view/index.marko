<widget instanceId="system-admin-logfile-view" title=state.title>
    <@content>
        <div.logFileView>
            <if(state.prepared)>
                <div.parameters>
                    <label>
                        <span.field>${component.getString("Log Level")}</span>
                        <form-list loadNodes=state.loadLogLevelNodes multiselect=true placeholder=component.getString("Filter Log Level") readonly=state.run on-nodesChanged("logLevelFilterChanged")/>
                    </label>
                    <label>
                        <span.field>${component.getString("Tail Lines")}</span>
                        <input.input-style type="text" pattern="[0-9]*" value=state.tailCount disabled=state.run onChange("tailCountChanged")/>
                    </label>
                    <label>
                        <span.field>${component.getString("Refresh Interval(sec)")}</span>
                        <input.input-style type="text" pattern="[0-9]*" value=state.refreshInterval disabled=state.run onChange("refreshIntervalChanged")/>
                    </label>
                    <label>
                        <span.field>${component.getString("Wrap Lines")}</span>
                        <form-list loadNodes=state.loadWrapLinesNodes placeholder="Translatable#Wrap Lines" readonly=state.run on-nodesChanged("wrapLinesChanged")/>
                    </label>
                    <label>
                        <span.field>${component.getString("Filter")}</span>
                        <input.input-style type="text" value=state.filter disabled=state.run on-keydown("keydown") onChange("filterChanged")/>
                    </label>
                </div>
                <textarea.input-style.content readonly class={
                    nowrap: !state.wrapLines
                }>${state.content}</textarea>
            </if>
        </div>
    </@content>
</widget>
