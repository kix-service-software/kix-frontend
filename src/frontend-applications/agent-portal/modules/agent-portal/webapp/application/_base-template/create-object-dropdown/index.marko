<if(state.prepared && state.selectedValue)>
    <div class="new-object-dropdown-container">
        <span
            on-click("valueClicked", state.selectedValue)
            class="selected-value"
        >
            <if(state.values.length)>
                <i class="fa fa-ellipsis-v dropdown-button"/>
            </if>
            <span>${state.selectedValue[1]}</span>
            <i class="fa fa-plus"/>
        </span>
        <ul>
            <for|value| of=state.values>
                <li
                    class={
                        active: value[0] === state.selectedValue[0],
                    }
                    on-click("valueClicked", value)
                >
                    ${value[1]}
                </li>
            </for>
        </ul>
    </div>
</if>
