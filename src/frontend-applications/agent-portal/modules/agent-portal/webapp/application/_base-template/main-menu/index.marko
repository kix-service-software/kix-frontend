<if(!state.isMobile || state.showMobile)>
    <div class=(
        state.isMobile ? "mobile-main-menu-container" : "main-menu-container"
    )>
        <if(!state.loading)>
            <ul class=[
                "menu main-menu",
                {
                    "image-only": !state.showText && !state.isMobile,
                },
            ]>
                <for|menuEntry| of=state.primaryMenuEntries>
                    <if(menuEntry.show)>
                        <li
                            key=menuEntry.text
                            title=(state.translations[menuEntry.text])
                            class={
                                active: menuEntry.active,
                            }
                        >
                            <menu-entry
                                entry=menuEntry
                                isMobile=state.isMobile
                            />
                        </li>
                    </if>
                </for>
            </ul>
            <ul class=[
                "menu user-menu",
                {
                    "image-only": !state.showText && !state.isMobile,
                },
            ]>
                <for|menuEntry| of=state.secondaryMenuEntries>
                    <if(menuEntry.show)>
                        <li
                            key=menuEntry.text
                            title=(state.translations[menuEntry.text])
                            class={
                                active: menuEntry.active,
                            }
                        >
                            <menu-entry
                                entry=menuEntry
                                isMobile=state.isMobile
                            />
                        </li>
                    </if>
                </for>
            </ul>
            <if(state.isMobile)>
                <div class="context-list">
                    <tabbar isMobile=state.isMobile/>
                </div>
            </if>
        </if>
    </div>
</if>
