<if(state.permissionManager)>
    <div.permission-form>
        <div.permission-form-container>
            <div.permission-description-container>
                <div.crud-description>
                    <span title=state.createTitle>${state.createTitle[0]}</span>
                    <span title=state.readTitle>${state.readTitle[0]}</span>
                    <span title=state.updateTitle>${state.updateTitle[0]}</span>
                    <span title=state.deleteTitle>${state.deleteTitle[0]}</span>
                    <span title=state.denyTitle>${state.denyTitle}</span>
                </div>
            </div>
        </div>
        <dynamic-form-field-container manager=state.permissionManager invalid=state.invalid/>
    </div>
</if>
