                <overlay-icon isHint=true content=state.translations.get("NegateHint") title=state.translations.get("NegateTitle")/>
            </span>
            <span title=state.translations.get("PatternTitle")>
                <span>${state.translations.get("PatternTitle")}:</span>
                <overlay-icon isHint=true content=state.translations.get("PatternHint") title=state.translations.get("PatternTitle")/>
            </span>
        </div>
    </div>
    <dynamic-form-field-container manager=state.matchManager invalid=state.invalid/>
