<if(state.configuration)>
    <div class="table-configuration-container table-container">
        <h2 class="configuration-title">
            <translation-string pattern="Translatable#Table Configuration"/>
        </h2>
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>
                        <translation-string pattern="Translatable#Option"/>
                    </th>
                    <th>
                        <translation-string pattern="Translatable#Value"/>
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <translation-string pattern="Translatable#Table Height (Row Count)"/>
                    </td>
                    <td>
                        <input
                            type="number"
                            value=(state.configuration.displayLimit)
                            on-change("displayLimitChanged")
                            class="input-style"
                        >
                    </td>
                </tr>
                <tr>
                    <td>
                        <translation-string pattern="Translatable#Search Limit"/>
                    </td>
                    <td>
                        <input
                            type="number"
                            value=state.searchLimit
                            on-change("searchLimitChanged")
                            class="input-style"
                        >
                    </td>
                </tr>
                <tr>
                    <td>
                        <translation-string pattern="Translatable#Page Size"/>
                    </td>
                    <td>
                        <input
                            type="number"
                            value=state.limit
                            on-change("limitChanged")
                            class="input-style"
                        >
                    </td>
                </tr>
                <if(input.advancedSettings)>
                    <tr>
                        <td>
                            <translation-string pattern="Translatable#Empty Result Hint"/>
                        </td>
                        <td>
                            <input
                                type="text"
                                value=(state.configuration.emptyResultHint)
                                on-change("resultHintChanged")
                                class="input-style"
                            >
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <translation-string pattern="Translatable#Fixed First Column"/>
                        </td>
                        <td on-click("booleanValueChanged", "fixedFirstColumn")>
                            <input
                                type="checkbox"
                                checked=(state.configuration.fixedFirstColumn)
                            >
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <translation-string pattern="Translatable#Row Selection"/>
                        </td>
                        <td on-click("booleanValueChanged", "enableSelection")>
                            <input
                                type="checkbox"
                                checked=(state.configuration.enableSelection)
                            >
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <translation-string pattern="Translatable#Small Rows"/>
                        </td>
                        <td on-click("rowHeightChanged")>
                            <input
                                type="checkbox"
                                checked=component.isSmallRows()
                            >
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <translation-string pattern="Translatable#Small Headers"/>
                        </td>
                        <td on-click("headerHeightChanged")>
                            <input
                                type="checkbox"
                                checked=component.isSmallHeaders()
                            >
                        </td>
                    </tr>
                </if>
            </tbody>
        </table>
    </div>
    <div class="table-configuration-container table-container">
        <table-columns-configuration
            advancedSettings=input.advancedSettings
            columns=(state.configuration.tableColumns)
            objectType=(state.configuration.objectType)
            on-configurationChanged("columnConfigurationChanged")
        />
    </div>
</if>
