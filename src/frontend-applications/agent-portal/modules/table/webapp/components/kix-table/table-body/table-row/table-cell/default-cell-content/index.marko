<div
    class=[
        "table-cell-content",
        {
            "with-icons": state.showIcons,
            "with-text": state.showText,
        },
    ]
    style={
        height: input.height,
    }
    title=(state.cell.getValue() ? state.cell.getDisplayValue() : "")
>
    <if(state.showIcons && state.cell && state.cell.getValue().displayIcons)>
        <span>
            <for|icon| of=(state.cell.getValue().displayIcons)>
                <icon icon=icon showUnknown/>
            </for>
        </span>
    </if>
    <if(state.showText && state.cell.getValue())>
        <span class="text cell-display-text" dir=(state.rtl ? "rtl" : "ltr")>
            ${state.cell.getDisplayValue()}
        </span>
    </if>
    <if((state.showText || state.showIcons) && state.cell && state.overlay)>
        <overlay-icon
            title=(state.overlay.Title)
            icon=(state.overlay.Icon)
            content=(state.overlay.Content)
            isHint=(state.overlay.IsHint)
            isCustom=(state.overlay.IsCustom)
            data={
                object: state.overlay.Data,
                properties: state.overlay.Data.Properties,
            }
        />
    </if>
</div>
