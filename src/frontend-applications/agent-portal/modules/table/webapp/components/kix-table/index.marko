<div
    style="height:" + state.tableHeight
    key=(
        state.table ? state.table.getTableId() + "table-container" : "no-table"
    )
    on-scroll("onScroll")
    class="table-container"
>
    <if(state.table)>
        <table class="kix-table">
            <thead>
                <table-head-row table=input.table/>
            </thead>
            <table-body
                table=input.table
                key=input.table.getTableId() + "table-body"
            />
            <if(state.showLoadingShield)>
                <div class="table-shield">
                    <loading-spinner/>
                </div>
            </if>
        </table>
    </if>
</div>
