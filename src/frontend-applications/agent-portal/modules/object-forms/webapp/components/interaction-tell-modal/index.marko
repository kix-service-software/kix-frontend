<div
   class="modal fade"
   id="interaction-tell-modal"
   data-bs-backdrop="static"
   data-bs-keyboard="false"
>
   <div class="modal-dialog modal-dialog-scrollable modal-lg">
      <div class="modal-content">
         <div class=[
            "modal-header",
            {
               "bg-primary": input.severity === "Info",
               "bg-warning": input.severity === "Warning",
               "bg-danger": input.severity === "Error",
               "text-white":
                  input.severity === "Info" || input.severity === "Error",
            },
         ]>
            <if(state.title)>
               <h1 class="modal-title fs-5">
                  <translation-string pattern=state.title/>
               </h1>
            </if>
         </div>
         <div class="modal-body">
            <if(state.message)>
               <editor readOnly value=state.message/>
            </if>
         </div>
         <div class="modal-footer">
            <button
               type="button"
               class=[
                  "btn",
                  {
                     "btn-primary": input.severity === "Info",
                     "btn-warning": input.severity === "Warning",
                     "btn-danger": input.severity === "Error",
                     "text-white":
                        input.severity === "Info" || input.severity === "Error",
                  },
               ]
               on-click("closeTell")
            >
               <translation-string pattern="Translatable#OK"/>
            </button>
         </div>
      </div>
   </div>
</div>
