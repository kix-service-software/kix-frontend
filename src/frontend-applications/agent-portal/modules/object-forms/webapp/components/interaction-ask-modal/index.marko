<div
   class="modal fade"
   id="interaction-ask-modal"
   data-bs-backdrop="static"
   data-bs-keyboard="false"
>
   <div class="modal-dialog modal-dialog-scrollable modal-lg">
      <div class="modal-content">
         <div class="modal-header">
            <if(state.title)>
               <h1 class="modal-title fs-5">
                  <translation-string pattern=state.title/>
               </h1>
            </if>
         </div>
         <div class="modal-body">
            <if(state.question)>
               <editor readOnly value=state.question/>
            </if>
         </div>
         <div class="modal-footer">
            <if(Array.isArray(state.options) && state.options.length)>
               <for|option| of=state.options>
                  <button
                     type="button"
                     class="btn btn-success text-white"
                     on-click("closeAsk", option.Value)
                  >
                     <translation-string pattern=option.Label/>
                  </button>
               </for>
            </if>
         </div>
      </div>
   </div>
</div>
