<if(state.prepared)>
   <span class="d-flex flex-row align-items-center">
      <if(
         (state.inputType === "DATE" || state.inputType === "DATE_TIME") &&
         !state.usePlaceholderDateValue
      )>
         <input
            key="date-" + state.inputId
            value=state.dateValue
            type="date"
            min=state.minDate
            max=state.maxDate
            on-blur("setValue")
            class="form-control"
            disabled=state.readonly
         >
      </if>
      <if(
         (state.inputType === "DATE_TIME" || state.inputType === "TIME") &&
         !state.usePlaceholderDateValue
      )>
         <input
            key="time-" + state.inputId
            value=state.timeValue
            type="time"
            on-blur("setValue")
            class="form-control"
            disabled=state.readonly
         >
      </if>
      <if(state.usePlaceholderDateValue)>
         <text-form-input formValue=input.formValue/>
      </if>
   </span>
   <if(state.displayInputChangeButton)>
      <button
         class="btn btn-outline-secondary mt-1"
         on-click("inputTypeChanged")
      >
         <translation-string pattern=(
            state.usePlaceholderDateValue
               ? "Translatable#Change to date picker"
               : "Translatable#Change to placeholder"
         )/>
      </button>
   </if>
</if>
