<if(state.prepared)>
   <div class="datetime-input-container">

      <if(state.inputType === "DATE" || state.inputType === "DATE_TIME")>
         <input
            key="date-" + state.inputId
            value=state.dateValue
            type="date"
            min=state.minDate
            max=state.maxDate
            on-change("dateChanged")
            on-blur("dateChanged")
            class="form-control"
            disabled=state.readonly
         >
      </if>
      <if(state.inputType === "DATE_TIME" || state.inputType === "TIME")>
         <input
            key="time-" + state.inputId
            value=state.timeValue
            type="time"
            on-change("timeChanged")
            on-blur("timeChanged")
            class="form-control"
            disabled=state.readonly
         >
      </if>
   </div>
</if>
