<if(state.prepared)>
    <div class="number-form-input">
        <input
            type="number"
            value=state.value
            min=state.min
            max=state.max
            step=state.step
            readonly=state.readonly
            disabled=state.readonly
            on-change("valueChanged")
            class="form-control"
        >
        <span class="unit-string">
            <translation-string pattern=state.unitString/>
        </span>
    </div>
</if>
