<div class="d-flex align-items-center">
   <input
      type=component.getInputType(state.isPasswordVisible)
      value=state.value
      disabled=state.readonly
      on-keydown("keyDown")
      on-input("valueChanged")
      class="form-control"
      autocomplete=state.autocompleteProperty>
   <if(state.isPassword)>
      <div role="button" on-click("togglePasswordVisible") class="p-2">
         <i class=[
            "far",
            {
               "fa-eye": state.isPasswordVisible,
               "fa-eye-slash": !state.isPasswordVisible,
            },
         ]/>
      </div>
   </if>
</div>
