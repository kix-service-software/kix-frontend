<if(state.prepared)>
   <if(!state.readonly)>
      <input
         type="text"
         value=state.value
         on-keydown("keyDown")
         on-change("valueChanged")
         class="form-control"
      >
   </if>
   <else-if(state.readonly)>
      <input
         type="text"
         value=state.value
         disabled=state.readonly
         on-keydown("keyDown")
         on-change("valueChanged")
         class="form-control"
      >
   </else-if>
</if>
