<div.col-1.col-sm-1.p-0.ps-2>
   <if(!state.readonly)>
      <if(state.canAdd)>
         <button.btn.btn-outline-secondary.me-1
            type="button"
            on-click("addValue")
         >
            <i.fas.fa-plus-circle/>
         </button>
      </if>
      <if(state.canRemove)>
         <button.btn.btn-outline-secondary
            type="button"
            on-click("removeValue")
         >
            <i.fas.fa-minus-circle/>
         </button>
      </if>
   </if>
</div>
