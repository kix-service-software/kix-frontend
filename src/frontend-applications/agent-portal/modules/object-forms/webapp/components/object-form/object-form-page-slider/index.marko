<if(state.prepared)>
   <div class="row mb-3 py-0 pb-2 bg-white sticky-top">
      <div class="col-4 d-flex align-items-center justify-content-end">
         <div
            class="kix-icon-nook-left fs-3"
            title=(state.translations["Translatable#Previous"])
            on-click("previousPage")
         />
      </div>
      <div class="col-4 text-center fw-bold">
         <h2 class="fw-bold fs-3">
            <if(state.activePageIndex >= 0 && state.pages.length)>
               <translation-string pattern=(
                  state.pages[state.activePageIndex].name
               )/>
            </if>
         </h2>
         <div class="d-flex justify-content-center mt-2">

            <for|page, index| of=state.pages>
               <div
                  style="width:1rem;height:1rem"
                  class=[
                     "rounded-circle me-2",
                     {
                        "bg-secondary": index !== state.activePageIndex,
                        "bg-primary": index === state.activePageIndex,
                     },
                  ]
                  title=page.name
                  on-click("setPage", index)
               />
            </for>
         </div>
      </div>
      <div class="col-4 d-flex align-items-center justify-content-start">
         <div
            class="kix-icon-nook-right fs-3"
            title=(state.translations["Translatable#Next"])
            on-click("nextPage")
         />
      </div>
   </div>
</if>
