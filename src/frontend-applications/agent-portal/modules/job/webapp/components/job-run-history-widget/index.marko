<if(state.table)>
    <widget
        instanceId=state.instanceId
        title=(state.widgetConfiguration ? state.widgetConfiguration.title : "")
        contentActions=state.actions
    >
        <@content>
            <if(state.prepared)>
                <div class="job-run-history-content">
                    <div class="history-filter">
                        <filter
                            filterCount=state.filterCount
                            on-filter("filter")
                        />
                    </div>
                    <div class="history-container">
                        <kix-table table=state.table/>
                    </div>
                </div>
            </if>
            <else>
                <loading-spinner/>
            </else>
        </@content>
    </widget>
</if>
<else>
    <table-placeholder/>
</else>
