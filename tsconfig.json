{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2019",
    "incremental": true,
    "skipDefaultLibCheck": true,
    "lib": [
      "es6",
      "dom",
      "es2020"
    ],
    "types": [
      "node",
      "reflect-metadata",
      "mocha"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": false,
    "declaration": false,
    "strict": false,
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true
  },
  "types": [
    "node",
    "reflect-metadata"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts"
  ]
}