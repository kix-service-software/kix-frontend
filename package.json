{
    "name": "@kix/frontend",
    "version": "0.0.15",
    "description": "KIXng Frontend Webapplication.",
    "config": {
        "bundlefile": "kix-frontend.tar.gz"
    },
    "scripts": {
        "start": "node dist/server/index.js",
        "build": "./node_modules/.bin/gulp",
        "test-cucumber": "rm -Rf dist/ && tsc && cp -R features/ dist/ && ./node_modules/cucumber/bin/cucumber-js dist/features/ -f allure-cucumber-reporter.js",
        "test-cucumber-dev": "rm -Rf dist/ && tsc && cp -R features/ dist/  && ./node_modules/cucumber/bin/cucumber-js dist/features/",
        "test": "export http_proxy= && export https_proxy= && export NODE_ENV=test && sleep 1 && ./node_modules/.bin/nyc --reporter=text-summary --reporter cobertura --reporter html ./node_modules/.bin/mocha --reporter mocha-multi-reporters --reporter-options configFile=mocha.json --compilers ts:ts-node/register --require source-map-support/register --full-trace --exit \"./{,!(node_modules)/**/}*.test.ts\"",
        "test-plugin": "export http_proxy= && export https_proxy= && export NODE_ENV=test && sleep 1 && ./node_modules/.bin/nyc --reporter cobertura --reporter html --include \"src/plugins/${PLUGIN:-KIXPro}\" ./node_modules/.bin/mocha --preserve-symlinks --reporter mocha-multi-reporters --reporter-options configFile=mocha.json --compilers ts:ts-node/register --require source-map-support/register --full-trace --exit \"src/plugins/${PLUGIN:-KIXPro}/**/*.test.ts\"",
        "bundle": "rm -f ${npm_package_config_bundlefile} && tar cfz ${npm_package_config_bundlefile} * --exclude-from=.bundleignore",
        "extract-translatables": "./extract-translatables.sh",
        "build-doc": "raml2html --template ./doc/_raml2html_template/index.nunjucks ./doc/index.raml > ./doc/index.html",
        "generate-3rd-party-licenses": "./node_modules/license-checker/bin/license-checker --production --out LICENSE-Third-Party --relativeLicensePath"
    },
    "nyc": {
        "include": [
            "src/**/*.ts"
        ],
        "extension": [
            ".ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "reporter": [
            "text-summary",
            "html"
        ],
        "sourceMap": true,
        "instrument": true
    },
    "repository": {
        "type": "git",
        "url": "http://git.intra.cape-it.de/Softwareentwicklung/KIXng/frontend/app.git"
    },
    "author": "c.a.p.e. IT GmbH",
    "dependencies": {
        "@lasso/marko-taglib": "1.0.13",
        "address-rfc2822": "2.0.4",
        "body-parser": "1.18.3",
        "bowser": "2.1.2",
        "compression": "1.7.3",
        "cookie": "0.4.1",
        "cookie-parser": "1.4.3",
        "cors": "2.8.5",
        "csso": "3.5.1",
        "dateformat": "4.5.1",
        "express": "4.16.4",
        "express-force-ssl": "0.3.2",
        "file-saver": "2.0.2",
        "js-plugins": "1.0.0",
        "jsonfile": "5.0.0",
        "jsonwebtoken": "8.5.0",
        "lasso": "3.2.9",
        "lasso-less": "3.0.1",
        "lasso-marko": "2.4.6",
        "lasso-minify": "1.0.4",
        "lasso-minify-css": "1.1.4",
        "marko": "4.18.0",
        "marko-loader": "1.3.3",
        "md5": "2.2.1",
        "memcached": "2.2.2",
        "raml2html": "7.2.2",
        "redis": "2.8.0",
        "reflect-metadata": "0.1.13",
        "request": "2.88.0",
        "request-promise": "4.2.2",
        "scroll-into-view-if-needed": "2.2.20",
        "socket.io": "2.1.1",
        "winston": "3.1.0",
        "winston-daily-rotate-file": "3.3.3"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "0.1.3",
        "@types/chai": "4.1.7",
        "@types/chai-as-promised": "7.1.0",
        "@types/chart.js": "2.7.42",
        "@types/memcached": "2.2.6",
        "@types/mocha": "5.2.5",
        "@types/moment-duration-format": "2.2.2",
        "@types/nock": "9.3.1",
        "@types/node": "14.6.4",
        "@types/redis": "2.8.12",
        "@types/socket.io": "2.1.2",
        "allure-cucumberjs": "2.0.0-beta.6",
        "allure-js-commons": "2.0.0-beta.6",
        "chai": "4.2.0",
        "chai-as-promised": "7.1.1",
        "chai-http": "4.2.1",
        "cucumber": "5.1.0",
        "cucumber-html-reporter": "5.0.0",
        "gulp": "3.9.1",
        "gulp-clean": "0.4.0",
        "gulp-header-license": "1.0.9",
        "gulp-less": "4.0.1",
        "gulp-load-plugins": "2.0.1",
        "gulp-mocha": "6.0.0",
        "gulp-tsc": "1.3.2",
        "gulp-tslint": "8.1.3",
        "gulp-uglify-es": "1.0.4",
        "istanbul": "0.4.5",
        "license-checker": "20.2.0",
        "mocha": "5.2.0",
        "mocha-allure2-reporter": "0.0.3",
        "mocha-junit-reporter": "2.0.0",
        "mocha-multi-reporters": "1.5.1",
        "mocha-suppress-logs": "^0.2.0",
        "nock": "10.0.6",
        "nyc": "14.1.1",
        "run-sequence": "2.2.1",
        "socket.io-client": "2.2.0",
        "source-map-support": "0.5.12",
        "ts-node": "8.0.2",
        "tslint": "6.1.3",
        "typescript": "4.0.2",
        "uglify-es": "3.3.9"
    }
}
