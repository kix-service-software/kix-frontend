{
    "version": "0.2.0",
    "configurations": [
        {
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "NODE_ENV": "development",
                "NODE_TLS_REJECT_UNAUTHORIZED": "0",
                "LASSO_TIMEOUT": "200000",
                "SHOW_MODULE_COMPLAINS": "1"
            },
            "name": "KIX",
            "program": "${workspaceFolder}/src/server/index.ts",
            "request": "launch",
            "sourceMaps": true,
            "stopOnEntry": false,
            "type": "node",
            "outFiles": [
                "${workspaceFolder}/dist/server/**/*.js"
            ],
            "console": "integratedTerminal",
            "preLaunchTask": "gulp"
        },
        {
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "NODE_ENV": "development",
                "http_proxy": "",
                "https_proxy": "",
                "NODE_TLS_REJECT_UNAUTHORIZED": "0",
                "LASSO_TIMEOUT": "200000"
            },
            "name": "KIX quick start",
            "program": "${workspaceFolder}/src/server/index.ts",
            "request": "launch",
            "sourceMaps": true,
            "stopOnEntry": false,
            "type": "node",
            "outFiles": [
                "${workspaceFolder}/dist/server/*.js"
            ],
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "KIX Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--no-timeouts",
                "--reporter",
                "spec",
                "--compilers",
                "ts:ts-node/register",
                "--require",
                "source-map-support/register",
                "--exit",
                "tests/**/*.test.ts",
                "src/**/*.test.ts"
            ],
            "env": {
                "NODE_ENV": "test",
                "http_proxy": "",
                "https_proxy": ""
            },
            "sourceMaps": true,
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "protocol": "inspector",
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Cucumber",
            "program": "${workspaceFolder}/node_modules/cucumber/bin/cucumber-js",
            "args": [
                "dist/features/"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "preLaunchTask": "npm: build-cucumber"
        }
    ]
}